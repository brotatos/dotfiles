#name
macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'
set realname = "Robin Choudhury"

source ~/.mutt/muttrc.mailboxes
source ~/.mutt/colors
source ~/.mutt/folders
set ssl_force_tls = yes
set mbox_type=Maildir
set folder=$HOME/.mail
set spoolfile=+gmail/inbox
set use_from
folder-hook +xrobinc/.* "source ~/.mutt/xrobinc"
source ~/.mutt/colors

set sendmail = /usr/bin/msmtp
set beep_new
set imap_check_subscribed

set sendmail = /usr/bin/msmtp
set mail_check = 60
set imap_keepalive = 300

#allow mutt to open new imap connection automatically
unset imap_passive
# don't add + signs if message wraps
unset markers

set envelope_from
set mail_check = 0
unset move
set delete
unset confirmappend
set quit
unset mark_old
set mailcap_path= ~/.mutt/mailcap

# Auto display html
auto_view text/html

# Index options
set sort = threads
set sort_aux = 'reverse-last-date-received'
set sort_re

#composing mail
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set include
set forward_quote

#headers to show
hdr_order from: to: cc: date: subject:

# Don't request to move messages
set move = no

# Auto include copy of original message when you reply
set include = yes
