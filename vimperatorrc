highlight StatusLine color: #333; background: transparent; font-weight: normal;
highlight Hint font-family: sans-serif; font-size: 10px; font-weight: bold; text-transform: uppercase; color: white; background-color: black; padding: 0px 1px 0px 1px;

set hintchars=asdfghjkl
set visualbell
set defsearch=duckduckgo
set noscrollbars
set status=input,position,tabcount
set titlestring=

map <C-z> <S-Esc>
nnoremap j 3j
nnoremap k 3k

source! a.local

